<Window x:Class="STT.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:STT.WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Border Grid.Row="0" BorderThickness="1,1,1,1" BorderBrush="Black" HorizontalAlignment="Stretch" VerticalAlignment="Top" Padding="10,0,10,0">
            <DockPanel x:Name="HeaderPanel">
                <Label Content="TranslationTools" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="24" />
                <Button Content="Settings" HorizontalAlignment="Right" VerticalAlignment="Center" Click="SettingsButton_OnClick" />
            </DockPanel>
        </Border>

        <Frame x:Name="ContentFrame" Grid.Row="1" NavigationUIVisibility="Hidden"></Frame>

    </Grid>
</Window>
